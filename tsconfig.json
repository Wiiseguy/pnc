{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2024",
        "allowImportingTsExtensions": true,
        "checkJs": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strict": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}